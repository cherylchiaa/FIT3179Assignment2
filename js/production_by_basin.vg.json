{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 580,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/cherylchiaa/FIT3179Assignment2/refs/heads/main/data/PetroleumProductionByBasin.csv", 
      "format": {
        "type": "csv"
      }
    },
    "transform": [
        {
            "fold": [
                "Amadeus / Bonaparte / Canning (ML)",
                "Browse / Carnarvon / Perth (ML)",
                "Gippsland / Otway / Bass (ML)",
                "Cooper-Eromanga / Surat-Bowen (ML)"
            ],
            "as": ["Region", "Production"]
        },
        {
            "calculate": "replace(datum['Production'], ',', '')", 
            "as": "Production"
        },
        {
            "calculate": "toNumber(datum['Production'])", 
            "as": "Production"
        },
        {
            "window": [{"op": "rank", "as": "Rank"}],
            "groupby": ["Financial Year"],
            "sort": [{"field": "Production", "order": "descending"}]
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "line",
                "point": true
            },
            "encoding": {
                "x": {
                    "field": "Financial Year",
                    "type": "ordinal",
                    "title": "Financial Year",
                    "axis": {
                        "labelAngle": 0 
                    }
                },
                "y": {
                    "field": "Rank",
                    "type": "quantitative",
                    "sort": "descending",
                    "title": "Rank",
                    "axis": {
                        "values": [1, 2, 3, 4],
                        "labelExpr": "'Rank ' + datum.value",
                        "labelAngle": 0 
                    },
                    "scale": {
                        "domain": [1, 4] 
                    }
                },
                "color": {
                    "field": "Region",
                    "type": "nominal",
                    "legend": null,
                    "scale": {
                        "domain": [
                            "Amadeus / Bonaparte / Canning (ML)",
                            "Browse / Carnarvon / Perth (ML)",
                            "Gippsland / Otway / Bass (ML)",
                            "Cooper-Eromanga / Surat-Bowen (ML)"
                        ],
                        "range": [
                            "#ff748c",  
                            "#ffd1b3", 
                            "#a4d8e4", 
                            "#a1e8dc"
                        ]
                    }
                },
                "tooltip": [
                    {"field": "Region", "type": "nominal", "title": "Region"},
                    {"field": "Financial Year", "type": "ordinal", "title": "Financial Year"},
                    {"field": "Production", "type": "quantitative", "title": "Production (ML)"}
                ]
            }
        },
        {
            "mark": {"type": "text", "dx": -50, "dy": -130},
            "encoding": {
                "text": {"value": "Browse / Carnarvon / Perth (ML) consistently holds the top rank throughout all financial years"}
            }
        },
        {
            "mark": {
              "type": "text",
              "align": "left",
              "dx": 8,
              "dy": 0,
              "fontSize": 11,  
              "fontWeight": "bold"
            },
            "encoding": {
              "x": {
                "field": "Financial Year",
                "type": "ordinal"
              },
              "y": {"field": "Rank", "type": "quantitative"},
              "text": {"field": "Region"},
              "color": {"field": "Region", "type": "nominal"},
              "tooltip": [
                {"field": "Region", "type": "nominal", "title": "Region"}
              ]
            },
            "transform": [
              {
                "filter": "datum['Financial Year'] == '2021/22'"
              }
            ]
        }
    ],
    "config": {
        "axis": {
            "domain": false,
            "grid": false,
            "ticks": false
        },
        "view": {
            "stroke": null 
        }
    }
}
  